# Django Environment Configuration

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Language
LANGUAGE_CODE=de-de

# Customizable Branding (for multi-tenant reusability)
# These settings allow you to rebrand the application for different companies
# APP_NAME: Text shown in the navbar (e.g., "Your Company Helpdesk")
# COMPANY_NAME: Company name for branding purposes
# LOGO_URL: URL to company logo (can be /static/images/logo.png or external URL)
#           The logo will be automatically sized to fit the header (40px height)
# APP_TITLE: Title shown in browser tabs and HTML title tags
APP_NAME=ML Gruppe Helpdesk
COMPANY_NAME=ML Gruppe
LOGO_URL=/static/images/logo.png
APP_TITLE=ML Gruppe Helpdesk

# Site URL (used for email links)
SITE_URL=http://localhost:8000

# Database Configuration
# SQLite (for development)
DATABASE_URL=sqlite:///db.sqlite3

# MySQL/MariaDB (for production)
# DATABASE_URL=mysql://username:password@localhost:3306/helpdesk_db

# PostgreSQL (optional)
# DATABASE_URL=postgresql://username:password@localhost:5432/helpdesk_db

# Microsoft OAuth2 (optional)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/microsoft/callback

# Email Configuration (optional)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_HOST=outlook.office365.com
EMAIL_PORT=993

# Claude AI (optional)
CLAUDE_API_KEY=

# Microsoft Teams (optional)
TEAMS_WEBHOOK_URL=

# Redis (for Celery - optional)
REDIS_URL=redis://localhost:6379/0

# Sentry (optional)
SENTRY_DSN=

# CORS (optional - for API)
CORS_ALLOWED_ORIGINS=
